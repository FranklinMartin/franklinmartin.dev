services:
  app:
    image: fmcdev/franklinmartin.dev:main
    container_name: fmweb
    restart: always
    ports:
      - "80:80"
      - "443:443"
    working_dir: /app
  certbot:
    image: certbot/certbot:latest
    container_name: certbot
    volumes:
      - "./certbot/www/:/var/www/certbot/:rw"
      - "./certbot/conf/:/etc/letsencrypt/:rw"
